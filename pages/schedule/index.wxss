.schedule-page {
  font-size: 28rpx;
  line-height: 1.5;
  color: rgba(43,43,43,0.88);
}

.schedule-page .page-container {
  padding: 0 24rpx;
  padding-bottom: calc(112rpx + env(safe-area-inset-bottom) + 24rpx);
  box-sizing: border-box;
}

.schedule-page .glass-card {
  background: rgba(255,255,255,0.90);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  padding: 26rpx;
  margin-bottom: 18rpx;
}

.schedule-page .text-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #2B2B2B;
}

.schedule-page .text-helper {
  font-size: 24rpx;
  line-height: 36rpx;
}

.schedule-page .text-muted {
  color: rgba(43,43,43,0.55);
}

.schedule-page .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B2B2B;
  margin-bottom: 18rpx;
}

.schedule-page .template-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.schedule-page .template-card {
  padding: 20rpx;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.schedule-page .template-info {
  flex: 1;
  min-width: 0;
}

.schedule-page .template-info .text-body {
  font-size: 28rpx;
  color: #2B2B2B;
}

.schedule-page .template-actions {
  display: flex;
  gap: 10rpx;
}

.schedule-page .pill-mini {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  background: rgba(247,185,107,0.15);
  color: rgba(120,70,20,0.85);
  height: 56rpx; border-radius: 28rpx;
}

.schedule-page .form-card {
  padding: 22rpx;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  margin-bottom: 32rpx;
}

.schedule-page .form-row {
  margin-bottom: 16rpx;
}

.schedule-page .form-input {
  background: rgba(61, 53, 48, 0.03);
  border-radius: 14rpx;
  padding: 16rpx 20rpx;
  font-size: 32rpx;
  width: 100%;
  border: 1rpx solid rgba(61, 53, 48, 0.06);
}

.schedule-page .form-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
  justify-content: flex-end;
}

.schedule-page .form-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 24rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
}

.schedule-page .form-btn-ghost {
  background: rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(61, 53, 48, 0.10);
  color: rgba(43,43,43,0.88);
}

.schedule-page .form-btn-primary {
  background: #F7B96B;
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(247,185,107,0.28);
}

.schedule-page .secondary-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  padding: 0 32rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(61, 53, 48, 0.10);
  color: rgba(43,43,43,0.88);
}

.schedule-page .pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 32rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
}

.schedule-page .pill-ghost {
  background: rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(61, 53, 48, 0.10);
  color: rgba(43,43,43,0.88);
}

.schedule-page .pill-primary {
  height: 92rpx;
  border-radius: 46rpx;
  background: #F7B96B;
  color: #fff;
  font-size: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(247,185,107,0.28);
}

.schedule-page .cta-section {
  margin: 18rpx 0 32rpx 0;
}

.schedule-page .schedule-list {
  margin-top: 18rpx;
}

.schedule-page .timeline {
  display: flex;
  flex-direction: column;
}

.schedule-page .schedule-row {
  padding: 8rpx 0;
  display: flex;
  align-items: flex-start;
}

.schedule-page .time-col {
  width: 96rpx;
  text-align: right;
  padding-right: 14rpx;
  padding-top: 26rpx;
  font-size: 28rpx;
  color: rgba(0,0,0,0.45);
  font-weight: 400;
  flex-shrink: 0;
}

.schedule-page .timeline-col {
  width: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 26rpx;
  flex-shrink: 0;
}

.schedule-page .timeline-dot {
  width: 8rpx;
  height: 8rpx;
  background: #C9B6FF;
  border-radius: 50%;
}

.schedule-page .timeline-connector {
  width: 2rpx;
  flex: 1;
  background: rgba(201,182,255,0.25);
  margin-top: 8rpx;
}

.schedule-page .card {
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  padding: 26rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  flex: 1;
}

.schedule-page .card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2B2B2B;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.schedule-page .card-time {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(43,43,43,0.65);
  display: block;
}

.schedule-page .chip {
  display: inline-flex;
  align-items: center;
  height: 44rpx;
  padding: 0 16rpx;
  border-radius: 22rpx;
  font-size: 22rpx;
  background: rgba(247,185,107,0.22);
  color: rgba(120,70,20,0.85);
}

.schedule-page .chip-danger {
  background: rgba(255,140,120,0.18);
  color: rgba(150,40,20,0.85);
}

.schedule-page .break-card {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.schedule-page .mb-3 {
  margin-bottom: 18rpx;
}

.schedule-page .mb-4 {
  margin-bottom: 32rpx;
}

.schedule-page .mt-1 {
  margin-top: 8rpx;
}

.today-page {
  font-size: 28rpx;
  line-height: 1.5;
  color: rgba(43,43,43,0.88);
}

.today-page .page-container {
  padding: 0 24rpx;
  padding-bottom: 24rpx;
}

.today-page .glass-card {
  background: rgba(255,255,255,0.90);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  padding: 26rpx;
  margin-bottom: 18rpx;
}

.today-page .hero-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.today-page .text-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #2B2B2B;
}

.today-page .text-helper {
  font-size: 24rpx;
  line-height: 36rpx;
}

.today-page .text-muted {
  color: rgba(43,43,43,0.55);
}

.today-page .text-body {
  font-size: 28rpx;
  color: #2B2B2B;
}

.today-page .date-pill {
  flex-shrink: 0;
}

.today-page .chip {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.45);
  color: rgba(43,43,43,0.88);
  border: 1rpx solid rgba(61, 53, 48, 0.06);
}

.today-page .chip-on {
  background: linear-gradient(120deg, #F7C86A 0%, #F4A460 100%);
  color: rgba(31, 26, 22, 0.88);
  border-color: transparent;
  box-shadow: 0 4rpx 12rpx rgba(247, 200, 106, 0.25);
}

.today-page .stats-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.today-page .ring-card {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  padding: 0;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  display: flex;
  align-items: center;
  justify-content: center;
}

.today-page .progress-canvas {
  width: 280rpx;
  height: 280rpx;
}

.today-page .ring-center {
  position: absolute;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.today-page .rate-num {
  font-size: 56rpx;
  font-weight: 700;
  color: #2B2B2B;
}

.today-page .mini-cards {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.today-page .mini-card {
  flex: 1;
  padding: 24rpx;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.today-page .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B2B2B;
  margin-bottom: 18rpx;
}

.today-page .today-timeline {
  display: flex;
  flex-direction: column;
}

.today-page .today-row {
  padding: 8rpx 0;
  display: flex;
  align-items: flex-start;
}

.today-page .time-col {
  width: 96rpx;
  text-align: right;
  padding-right: 14rpx;
  padding-top: 26rpx;
  font-size: 28rpx;
  color: rgba(0,0,0,0.45);
  font-weight: 400;
  flex-shrink: 0;
}

.today-page .timeline-col {
  width: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 26rpx;
  flex-shrink: 0;
}

.today-page .timeline-dot {
  width: 8rpx;
  height: 8rpx;
  background: #C9B6FF;
  border-radius: 50%;
}

.today-page .timeline-connector {
  width: 2rpx;
  flex: 1;
  background: rgba(201,182,255,0.25);
  margin-top: 8rpx;
}

.today-page .card {
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  padding: 26rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.today-page .task-main {
  flex: 1;
}

.today-page .task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.today-page .status-done {
  background: rgba(144, 238, 144, 0.2);
  color: #5CB85C;
}

.today-page .status-not_done {
  background: rgba(255, 99, 71, 0.2);
  color: #FF6347;
}

.today-page .task-actions {
  display: flex;
  gap: 8rpx;
}

.today-page .pill-mini {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  background: rgba(247,185,107,0.15);
  color: rgba(120,70,20,0.85);
  height: 56rpx; border-radius: 28rpx;
}

.today-page .reason-input {
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(61, 53, 48, 0.08);
}

.today-page .reason-field {
  background: rgba(61, 53, 48, 0.04);
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 24rpx;
  width: 100%;
}

.today-page .saved-note {
  padding: 8rpx;
  background: rgba(247,185,107,0.12);
  border-radius: 12rpx;
}

.today-page .break-card {
  text-align: center;
  padding: 16rpx 0;
}

.today-page .mb-3 {
  margin-bottom: 18rpx;
}

.today-page .mb-4 {
  margin-bottom: 32rpx;
}

.today-page .mt-1 {
  margin-top: 8rpx;
}

.today-page .mt-2 {
  margin-top: 12rpx;
}

.today-page .mt-3 {
  margin-top: 18rpx;
}

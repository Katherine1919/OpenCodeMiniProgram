.review-page {
  font-size: 28rpx;
  line-height: 1.5;
  color: rgba(43,43,43,0.88);
}

.review-page .page-container {
  padding: 0 24rpx;
  padding-bottom: 24rpx;
}

.review-page .glass-card {
  background: rgba(255,255,255,0.90);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  padding: 26rpx;
  margin-bottom: 18rpx;
}

.review-page .text-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #2B2B2B;
}

.review-page .text-helper {
  font-size: 24rpx;
  line-height: 36rpx;
}

.review-page .text-muted {
  color: rgba(43,43,43,0.55);
}

.review-page .text-body {
  font-size: 28rpx;
  color: #2B2B2B;
}

.review-page .stats-card {
  padding: 32rpx;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 32rpx;
}

.review-page .stat-item {
  text-align: center;
  flex: 1;
}

.review-page .stat-num {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #F7B96B;
  margin-bottom: 8rpx;
}

.review-page .stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(61, 53, 48, 0.08);
}

.review-page .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B2B2B;
  margin-bottom: 18rpx;
}

.review-page .reasons-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.review-page .reason-item {
  padding: 24rpx;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
}

.review-page .empty {
  padding: 64rpx 22rpx;
  text-align: center;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
}

.review-page .tool-card {
  padding: 24rpx;
  background: rgba(255,255,255,0.92);
  border-radius: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(60,60,60,0.08);
  border: 1rpx solid rgba(0,0,0,0.03);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.review-page .pill-mini {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  background: rgba(247,185,107,0.15);
  color: rgba(120,70,20,0.85);
  height: 56rpx; border-radius: 28rpx;
}

.review-page .mb-3 {
  margin-bottom: 18rpx;
}

.review-page .mb-4 {
  margin-bottom: 32rpx;
}

.review-page .mt-1 {
  margin-top: 8rpx;
}

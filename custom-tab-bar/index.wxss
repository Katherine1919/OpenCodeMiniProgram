.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(var(--tabBarH) + var(--safeBottom));
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(28rpx);
  -webkit-backdrop-filter: blur(28rpx);
  border-top: 1rpx solid rgba(61, 53, 48, 0.06);
  box-shadow: 0 -6rpx 20rpx rgba(31, 26, 22, 0.04);
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding: 8rpx 20rpx calc(8rpx + var(--safeBottom));
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.tab-capsule {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 18rpx;
  border-radius: var(--radiusPill);
  transition: all 0.32s cubic-bezier(0.34, 1.36, 0.64, 1);
  min-width: 80rpx;
}

.capsule-active {
  background: linear-gradient(120deg, rgba(247, 200, 106, 0.85) 0%, rgba(244, 164, 96, 0.85) 100%);
  box-shadow: 0 6rpx 18rpx rgba(247, 200, 106, 0.32);
  transform: translateY(-3rpx);
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.5;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-icon {
  opacity: 1;
  transform: scale(1.08);
}

.tab-text {
  font-size: 20rpx;
  color: rgba(31, 26, 22, 0.42);
  font-weight: 400;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-text {
  color: rgba(31, 26, 22, 0.90);
  font-weight: 600;
}

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(116rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(28rpx);
  -webkit-backdrop-filter: blur(28rpx);
  border-top: 1rpx solid rgba(60, 60, 60, 0.06);
  box-shadow: 0 -6rpx 20rpx rgba(60, 60, 60, 0.08);
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding: 12rpx 20rpx calc(12rpx + env(safe-area-inset-bottom));
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.tab-capsule {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 10rpx 16rpx;
  border-radius: 36rpx;
  transition: all 0.32s cubic-bezier(0.34, 1.36, 0.64, 1);
  min-width: 72rpx;
  height: 72rpx;
  justify-content: center;
}

.capsule-active {
  background: #F7B96B;
  box-shadow: 0 6rpx 18rpx rgba(247, 185, 107, 0.32);
  transform: translateY(-4rpx);
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-icon {
  opacity: 1;
  transform: scale(1.08);
}

.tab-text {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 400;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-text {
  color: rgba(0, 0, 0, 0.85);
  font-weight: 600;
}

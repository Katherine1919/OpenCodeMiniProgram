.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(116rpx + env(safe-area-inset-bottom));
  background: rgba(255, 253, 249, 1);
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
  border-top: 1rpx solid rgba(0,0,0,0.05);
  border-radius: 0;
  box-shadow: 0 -2rpx 18rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding: 12rpx 20rpx calc(12rpx + env(safe-area-inset-bottom));
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 6rpx 0;
}

.tab-capsule {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
  padding: 0 22rpx;
  border-radius: 999rpx;
  transition: all 0.28s ease-out;
  min-width: 0;
  height: 58rpx;
  justify-content: center;
  background: transparent;
  border: 1rpx solid transparent;
}

.tab-ring {
  position: absolute;
  top: 6rpx;
  width: 40rpx;
  height: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50%;
  border: 3rpx solid transparent;
  background: transparent;
  opacity: 0;
  transition: all 0.2s ease-out;
}

.ring-active {
  opacity: 1;
  border-color: var(--c-primary);
  background: rgba(246,181,91,.15);
}

.capsule-active {
  /* 选中态：淡橙半透明底 + 轻描边 + 极轻阴影 */
  background: rgba(246,181,91,.18);
  border: 1rpx solid rgba(246,181,91,.45);
  box-shadow: 0 2rpx 8rpx rgba(246,181,91,.12);
}

.tabbar-top-divider {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(to right, transparent, rgba(0,0,0,.04), transparent);
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-icon {
  opacity: 1;
  transform: scale(1.08);
}

.tab-text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 400;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-text {
  color: #D9892A;
  font-weight: 700;
}

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(112rpx + env(safe-area-inset-bottom));
  background: rgba(255, 253, 249, 1);
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
  border-top: 1rpx solid rgba(0,0,0,0.05);
  border-radius: 0;
  box-shadow: 0 -2rpx 18rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx env(safe-area-inset-bottom);
  z-index: 10000;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 112rpx;
}

.tab-capsule {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 22rpx;
  border-radius: 999rpx;
  background: transparent;
  border: 1rpx solid transparent;
  transition: background 0.2s, border 0.2s, box-shadow 0.2s;
}

.capsule-active {
  background: rgba(246,181,91,.18);
  border: 1rpx solid rgba(246,181,91,.45);
  box-shadow: 0 2rpx 8rpx rgba(246,181,91,.12);
}

.tab-text {
  font-size: 26rpx;
  line-height: 56rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 400;
  text-align: center;
  display: block;
}

.capsule-active .tab-text {
  color: #D9892A;
  font-weight: 700;
}

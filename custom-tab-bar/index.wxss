.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(116rpx + env(safe-area-inset-bottom));
  background: rgba(255, 253, 249, 0.92);
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
  border-top: 1rpx solid rgba(0,0,0,0.05);
  border-radius: 22rpx 22rpx 0 0;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.04);
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding: 12rpx 20rpx calc(12rpx + env(safe-area-inset-bottom));
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 6rpx 0;
}

.tab-capsule {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 10rpx 16rpx;
  border-radius: 36rpx;
  transition: all 0.32s cubic-bezier(0.34, 1.36, 0.64, 1);
  min-width: 72rpx;
  height: 72rpx;
  justify-content: center;
}

.tab-ring {
  position: absolute;
  top: 6rpx;
  width: 40rpx;
  height: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50%;
  border: 3rpx solid transparent;
  background: transparent;
  opacity: 0;
  transition: all 0.2s ease-out;
}

.ring-active {
  opacity: 1;
  border-color: var(--c-primary);
  background: rgba(246,181,91,.15);
}

.capsule-active {
  /* keep a subtle shift without large orange block */
  transform: translateY(-2rpx) scale(1.02);
  background: transparent;
  box-shadow: none;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-icon {
  opacity: 1;
  transform: scale(1.08);
}

.tab-text {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 400;
  transition: all 0.28s ease-out;
}

.capsule-active .tab-text {
  color: rgba(0, 0, 0, 0.85);
  font-weight: 600;
}

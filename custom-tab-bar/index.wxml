<view class="tabbar">
  <view 
    wx:for="{{list}}" 
    wx:key="pagePath"
    class="tab-item"
    bindtap="switchTab"
    data-index="{{index}}"
  >
    <view class="tab-capsule {{selected === index ? 'capsule-active' : ''}}">
      <text class="tab-text">{{item.text}}</text>
    </view>
  </view>
</view>
